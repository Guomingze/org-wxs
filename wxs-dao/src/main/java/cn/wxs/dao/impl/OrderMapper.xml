<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cn.wxs.dao.OrderDao">
    <resultMap id="orderMap" type="cn.cn.wxs.pojo.Order">
        <result column="oid" property="oid"/>
        <result column="omoney" property="omoney"/>
        <result column="otype" property="otype"/>
        <association property="ouser" javaType="cn.cn.wxs.pojo.User">
            <result column="uid" property="uid"/>
            <result column="uname" property="uname"/>
            <result column="upwd" property="upwd"/>
            <result column="uphone" property="uphone"/>
            <result column="utype" property="utype"/>
        </association>
        <association property="omenu" javaType="cn.cn.wxs.pojo.Menu">
            <result column="mid" property="mid"/>
            <result column="mname" property="mname"/>
            <result column="mprice" property="mprice"/>
            <result column="mdishes" property="mdishes"/>
            <result column="mstate" property="mstate"/>
        </association>
    </resultMap>

     <select id="getOrdersByOrder" resultMap="orderMap" parameterType="cn.cn.wxs.pojo.Order">
         select oid,ouser,omenu,omoney,otype,uid,uname,upwd,uphone,utype,mid,mname,mprice,mdishes,mstate from `order`,`user`,`menu`
         <trim prefix="where" prefixOverrides="and">
             <if test="oid != null">
                 and oid=#{oid}
             </if>
             <if test="ouser != null">
                 and ouser=#{ouser}
             </if>
             <if test="omenu != null">
                 and omenu=#{omenu}
             </if>
             <if test="omoney != null">
                 and omoney=#{omoney}
             </if>
             <if test="otype != null">
                 and otype=#{otype}
             </if>
         </trim>
     </select>

    <insert id="addOrder" parameterType="cn.cn.wxs.pojo.Order" >
        insert into `order` (oid, ouser, omenu, omoney, otype)
        values (#{oid},#{ouser},#{omenu},#{omoney},#{otype});
    </insert>

    <update id="updataOrder" parameterType="cn.cn.wxs.pojo.Order">
        update `order` set ouser=#{ouser},omenu=#{omenu},omoney=#{omoney},otype=#{otype} where oid=#{oid}
    </update>
</mapper>